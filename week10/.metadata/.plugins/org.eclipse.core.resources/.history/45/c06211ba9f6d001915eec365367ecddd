package week10;

import java.util.Arrays;

public class exam15 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int count = 0;
		String[] tmp = Arrays.copyOf(args, args.length);
		for(int i = 0 ; i < args[0].length(); i++) {
			if(args[0] == " ") {
				count++;
			}
		}
		System.out.print("모두"+count+"개의 단어가 있습니다.");
	}

}
